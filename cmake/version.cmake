function (GENERATE_VERSION ENVIRONMENT_VARIABLE_NAME VARIABLE_NAME DEFAULT_VARIABLE_NUMBER_HI DEFAULT_VARIABLE_NUMBER_LO)
    list(APPEND CMAKE_MESSAGE_CONTEXT "Version.cmake")

    if(DEFINED ENV{${ENVIRONMENT_VARIABLE_NAME}})
        set(${VARIABLE_NAME}_HI "$ENV{${ENVIRONMENT_VARIABLE_NAME}_HI}" PARENT_SCOPE)
        set(${VARIABLE_NAME}_LO "$ENV{${ENVIRONMENT_VARIABLE_NAME}_LO}" PARENT_SCOPE)
    else()
        set(${VARIABLE_NAME}_HI ${DEFAULT_VARIABLE_NUMBER_HI} PARENT_SCOPE)
        set(${VARIABLE_NAME}_LO ${DEFAULT_VARIABLE_NUMBER_LO} PARENT_SCOPE)
    endif()
endfunction()
